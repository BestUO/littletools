{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "command": "sh",
    "args": ["-c"],
    "options": {
        "cwd": "${workspaceRoot}/build"
    },
    "tasks": [
        {
            "label": "build tooltest",
            "args": [
                "cmake -DCMAKE_BUILD_TYPE=Debug ..; cmake --build . --target tooltest -j 2"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build trimule",
            "args": [
                "cmake -DCMAKE_BUILD_TYPE=Debug ..; cmake --build . --target trimule -j 2; make copy_file"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
    ]
}